<% provide(:title, "Sign up") %>
<% provide(:url  , signup_path) %>
<% provide(:bottom_text, "アカウント作成") %>
<h1>新規登録</h1>
<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
  <%= form_for(@user, url: yield(:url)) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= f.label :name %>
    <%= f.text_field :name, class: "form_control" %>
    
    <%= f.label :email %>
    <%= f.email_field :email, class: "form_control" %>
    
    <%= f.label :password %>
    <%= f.password_field :password, class: "form_control" %>
    
    <%= f.label :password_confirmation, "確認" %>
    <%= f.password_field :password_confirmation, class: "form_control" %>
    
    <%= f.submit yield(:bottom_text), class: "btn btn-primary" %>
  <% end %>
  </div>
</div>